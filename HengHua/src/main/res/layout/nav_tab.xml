<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_tab_lo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/nav_tab_padding">
    <!--导航标签图标-->
    <ImageView
        android:id="@+id/nav_tab_iv"
        android:layout_width="@dimen/nav_tab_width"
        android:layout_height="@dimen/nav_img_height"
        android:gravity="center"
        android:src="@drawable/nav_tab_review_slt" />
    <!--导航标签文字-->
    <TextView
        android:id="@+id/nav_tab_tv"
        android:layout_width="@dimen/nav_tab_width"
        android:layout_height="@dimen/nav_text_height"
        android:paddingTop="2dp"
        android:gravity="center"
        android:textColor="@drawable/nav_tab_text_slt"
        android:textSize="@dimen/nav_text_size" />

</LinearLayout>