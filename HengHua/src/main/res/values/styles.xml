    <!--窗口标题字体-->
    <style name="titleBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/titleBar_text_size</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <!--<item name="android:button">@null</item>-->
    </style>

    <!--题型选择按钮字体-->
    <style name="testTypeChooserText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/test_question_type_bg_slt</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/titleBar_questionTypeChooser_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <!--<item name="android:button">@null</item>-->
    </style>

    <!--	第一个属性给进度条的样式添加一个可以带旋转动画的图片  -->
    <style name="progressBar_circle">
        <item name="android:indeterminateDrawable">@drawable/progress_circle</item>
        <item name="android:maxHeight">@dimen/progressBarSize</item>
        <item name="android:maxWidth">@dimen/progressBarSize</item>
        <item name="android:minHeight">@dimen/progressBarSize</item>
        <item name="android:minWidth">@dimen/progressBarSize</item>
    </style>

    <!--在线测试模式选项样式-->
    <style name="testModeItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_indicator_bg</item>
        <item name="android:paddingLeft">@dimen/testModeItem_x_padding</item>
        <item name="android:paddingRight">@dimen/testModeItem_x_padding</item>
        <item name="android:paddingTop">@dimen/testModeItem_y_padding</item>
        <item name="android:paddingBottom">@dimen/testModeItem_y_padding</item>
    </style>


    <!--考试模式字体样式-->
    <style name="examSmallTest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">11sp</item>

    </style>

    <style name="examRedTest" parent="@style/examSmallTest">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


